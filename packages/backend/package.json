{
  "name": "@aichat/backend",
  "version": "1.0.0",
  "description": "AI Chat Platform Backend - Hono API Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --packages=external --target=node18 --sourcemap --outdir=dist",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:init": "tsx scripts/init-db.ts",
    "db:seed": "prisma db seed",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "jest"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aichat/shared": "workspace:*",
    "@hono/node-server": "^1.13.5",
    "@hono/zod-validator": "^0.4.1",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "gpt-tokenizer": "^3.2.0",
    "hono": "^4.6.7",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "ai",
    "chat",
    "hono",
    "api",
    "llm"
  ],
  "author": "AI Chat Team",
  "license": "MIT"
}
